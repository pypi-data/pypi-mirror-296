<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="wizard_project_recalculate_form">
        <field name="name">project.recalculate.execution.wizard.form</field>
        <field name="model">project.recalculate.execution.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Recalculate project execution">
                <group>
                    <p>This Projects will be recalculated according this date:</p>
                    <group>
                        <field name="date"/>
                    </group>
                    <p>Are you sure?</p>
                </group>
                <footer>
                    <button name="confirm_button" string="Continue" type="object" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

