function committagpush() {
  if [ "$#" -ne 1 ]; then
    echo "Usage: blanktagpush <tag>"
    return 1
  fi
  tagname=$1
  git commit -a -m "$tagname" && gtag $tagname -m "$tagname" && gpush
}