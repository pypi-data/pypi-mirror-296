<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser">

  <browser:page
      name="list_view"
      for="imio.smartweb.core.contents.ISectionCollection"
      class="imio.smartweb.core.contents.sections.collection.views.CollectionView"
      template="../common_templates/list.pt"
      permission="zope2.View"
      layer="affinitic.smartweb.interfaces.IAffiniticSmartwebLayer"
      menu="plone_displayviews"
      title="List view"
      />

    <browser:page
      name="mini_list_view"
      for="imio.smartweb.core.contents.ISectionCollection"
      class="imio.smartweb.core.contents.sections.collection.views.CollectionView"
      template="../common_templates/mini-list.pt"
      permission="zope2.View"
      layer="affinitic.smartweb.interfaces.IAffiniticSmartwebLayer"
      menu="plone_displayviews"
      title="Mini List view"
      />

</configure>
