<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_helpdesk_ticket_set_child_ticket_wizard" model="ir.ui.view">
      <field name="name">Add child tickets to Global Parent</field>
      <field name="model">helpdesk.ticket.parent.set.child.ticket</field>
      <field name="arch" type="xml">
        <form string="Helpdesk Ticket">
          <sheet>

            <div class="oe_title">
              <h3 class="o_row">
                <field name="global_ticket_id" invisible="True"/>
                <field name="global_name" readonly="True"/>
              </h3>
            </div>

            <group>
              <field name="child_ticket_ids" />
            </group>

          </sheet>
          <footer>
            <button
              name="button_done"
              string="Save"
              type="object"
              class="btn btn-primary"
            />
            <button
              string="Close"
              type="object"
              class="btn-default"
              special="cancel"
            />
          </footer>
        </form>
      </field>
    </record>
  </data>
</odoo>
