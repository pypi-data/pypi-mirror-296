        <tr>
            <td class='grid'>
                <a href='/view_trans?trans_id=${tx['trans_id']}'>
                    ${tx['trans_id']}</a>
            </td>
            <td class='grid'>${tx['message']}</td>
            <td class='grid'>${tx['username']}</td>
            <td class='grid' align='right'>${tx['entry_date_fmt']}</td>
        </tr>
