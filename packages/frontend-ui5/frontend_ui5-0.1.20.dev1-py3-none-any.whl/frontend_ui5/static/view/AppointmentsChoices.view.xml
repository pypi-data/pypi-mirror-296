<mvc:View
  xmlns:core="sap.ui.core"
  controllerName="demo.spa.controller.CalendarChoices"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:unified="sap.ui.unified"
  xmlns:l="sap.ui.layout"
  height="99%"
>
  <Page
    showHeader="false"
    visible="{= ${frontend>/currentUser/username} !== ''}"
  >
    <l:BlockLayout background="Default">
      <l:BlockLayoutRow>
        <!-- todo i18n -->
        <l:BlockLayoutCell class="customNeutralBackground1">
          <Text
            textAlign="Center"
            text="WÃ¤hle eine Person aus, um ihre Termine anzuzeigen oder zu bearbeiten."
            class="customCenteredTileContent"
          />
          <core:Icon
            src="sap-icon://calendar"
            size="3rem"
            class="customCenteredTileContent"
          />
        </l:BlockLayoutCell>
        <l:BlockLayoutCell class="customPositiveBackground">
          <Text
            textAlign="Center"
            text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec purus."
            class="customCenteredTileContent"
          />
          <core:Icon
            src="sap-icon://status-positive"
            size="3rem"
            class="customCenteredTileContent"
          />
        </l:BlockLayoutCell>
        <l:BlockLayoutCell class="customWarningBackground">
          <Text
            textAlign="Center"
            text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec purus."
            class="customCenteredTileContent"
          />
          <core:Icon
            src="sap-icon://alert"
            size="3rem"
            class="customCenteredTileContent"
          />
        </l:BlockLayoutCell>
        <l:BlockLayoutCell class="customNegativeBackground">
          <Text
            textAlign="Center"
            text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec purus."
            class="customCenteredTileContent"
          />
          <core:Icon
            src="sap-icon://error"
            size="3rem"
            class="customCenteredTileContent"
          />
        </l:BlockLayoutCell>
      </l:BlockLayoutRow>
    </l:BlockLayout>
    <List visible="{= ${userData>/person_list}.length &gt; 1}">
      <StandardListItem
        class="sapUiMediumMarginTop"
        icon="sap-icon://appointment-2"
        iconInset="false"
        press=".onPersonItemPress"
        title="Alle Termine"
        tooltip="{i18n>todo i18n}"
        type="Active"
      >
        <customData>
          <core:CustomData
            key="person"
            value="ALL"
          />
        </customData>
      </StandardListItem>
    </List>
    <List
      class="sapUiMediumMarginTop"
      items="{path: 'userData>/person_list',
                sorter:{ path: '', comparator: '.comparePersons'}}"
      mode="None"
    >
      <StandardListItem
        icon="sap-icon://calendar"
        iconInset="false"
        press=".onPersonItemPress"
        title="{userData>first_name} {userData>last_name}"
        type="Active"
      >
        <customData>
          <core:CustomData
            key="person"
            value="{userData>id}"
          />
        </customData>
      </StandardListItem>
    </List>
  </Page>
  <core:Fragment
    fragmentName="demo.spa.view.LoginRequiredPage"
    type="XML"
  />
</mvc:View>
